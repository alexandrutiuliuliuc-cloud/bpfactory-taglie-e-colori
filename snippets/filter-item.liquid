{%- liquid
  assign file_extension = 'png'

  if scope
    assign scope = scope | prepend: '--'
  endif

  # Normalize color name for grouping (mother color)
  capture mother_color
    render 'color-name-normalizer', color_name: filter_value.label
  endcapture
  assign mother_color = mother_color | strip
-%}

<li
  class="
    filter-item
    {% if type == 'chip' %} filter-item--chip{% endif %}
  "
  data-color-original="{{ filter_value.label | escape }}"
  data-color-mother="{{ mother_color | escape }}"
>
  <label
    data-filter-item
    class="filter-item__content {% if filter_value.count == 0 and filter_value.active == false %}filter-item__content--disabled{% endif %}"
    for="filter--{{ filter_value.param_name | url_escape }}--{{ filter_value.label | url_escape }}{{ scope }}"
  >
    <input
      type="checkbox"
      name="{{ filter_value.param_name }}"
      value="{{ filter_value.value }}"
      class="filter-item__checkbox visually-hidden"
      data-filter-item-input
      data-filter="{{ filter_value.param_name }}={{ filter_value.value }}"
      data-name-escaped="{{ filter_value.param_name | url_encode }}"
      data-value-escaped="{{ filter_value.value | url_escape }}"
      id="filter--{{ filter_value.param_name | url_escape }}--{{ filter_value.label | url_escape }}{{ scope }}"
      {% if filter_value.active -%}
        checked
      {% endif %}
      {%- if key != blank and val != blank -%}
        data-{{ key }}="{{ val | handle }}"
      {%- endif -%}
      {% if filter_value.count == 0 and filter_value.active == false %}
        disabled
      {% endif %}
    >

    <div class="filter-item__content-inner">
      {%- if type == 'swatch' -%}
        {%- liquid
          capture filter_swatch_style
            assign downcased_label = filter_value.label | downcase

            # Color
            if filter_value.swatch and filter_value.swatch.color
              echo 'background-color: [[bc]];' | replace: '[[bc]]', filter_value.swatch.color
            else
              if custom_color_key_map contains downcased_label
                for color_name in custom_color_key_map
                  if color_name == downcased_label
                    echo 'background-color: [[bc]];' | replace: '[[bc]]', custom_color_value_map[forloop.index0]
                    break
                  endif
                endfor
              else
                assign color_value = filter_value.label | downcase | replace: ' ', ''

                echo 'background-color: [[bc]];' | replace: '[[bc]]', color_value
              endif
            endif

            # Image
            #
            # Width of 72 to account for largest swatch display
            if filter_value.swatch and filter_value.swatch.image
              assign swatch_image_url = filter_value.swatch.image | image_url: width: 72
            elsif filter_value.image
              assign swatch_image_url = filter_value.image | image_url: width: 72
            else
              assign file_name = filter_value.label | handle | append: '.' | append: file_extension
              assign swatch_image_url = file_name | file_img_url: '72x72' | prepend: 'https:'
            endif

            if swatch_image_url != blank
              echo 'background-image: url([[image]]);' | replace: '[[image]]', swatch_image_url
            endif
          endcapture
        -%}
        <div class="filter-swatch__outer" data-swatch>
          <span class="filter-swatch" style="{{ filter_swatch_style }}"></span>
        </div>
      {%- endif -%}

      {%- if type == 'checkbox' -%}
        <div class="filter-input__input">
          {% render 'icon' with icon: 'checkmark' %}
        </div>
      {%- endif -%}

      {%- if type == 'checkbox' or type == 'swatch' -%}
        <span class="filter-item__label">
          {{ filter_value.label }}
        </span>
        <span class="filter-item__count fs-body-75">
          {{- 'filters.item_count_html' | t: value: filter_value.count -}}
        </span>
      {%- endif -%}

      {%- if type == 'chip' -%}
        <div class="filter-item__chip">
          {{ filter_value.label }}
        </div>
      {%- endif -%}
    </div>
  </label>
</li>
